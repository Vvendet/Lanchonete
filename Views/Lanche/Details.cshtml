@model Lanche

<div class="container">
    <div class="row">
        <div class="card" style="width: 18rem;">
            <img src="@Model.ImagemUrl" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">@Model.Nome</h5>
                <p class="card-text">@Model.DescricaoDetalhada</p>
                <a class="btn btn-primary" asp-controller="CarrinhoCompra" asp-action="AdicionarItemNoCarrinhoCompra" asp-route-lancheId="@Model.LancheId">Adicionar @Model.Nome ao Carrinho</a>
            </div>
        </div>
    </div>
</div>
